<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:background="#BAF872">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="780dp"
        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="#63AF0E">


        <TextView
            android:id="@+id/cancion"
            android:layout_width="702dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:text="Cancion"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            card_view:autoSizeTextType="none"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/buttonPlay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="700dp"
            android:layout_marginTop="10dp"
            card_view:srcCompat="@drawable/boton_play" />

    </androidx.cardview.widget.CardView>

</LinearLayout>